<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:theme="@style/AppTheme.NoActionBar"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/alice_blue"
    tools:context=".ScoreActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:gravity="center_horizontal|center_vertical"
        android:layout_height="160dp"
        android:background="@color/chinese_violet">

        <TextView
            android:id="@+id/textView"
            android:background="@drawable/round_rect_shape_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" End of the game "
            android:textColor="@color/blue_palette"
            android:textSize="40sp" />

        <ImageView
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginTop="5dp"
            android:src="@drawable/movie"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal|center_vertical"
        android:paddingTop="20dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Score:"
            android:textColor="@color/rose_dust"
            android:textSize="30dp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/score"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:textSize="30dp"
            android:textColor="@color/rose_dust"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="/"
            android:textSize="30dp"
            android:textColor="@color/rose_dust"/>

        <TextView
            android:id="@+id/nbQuestions"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:textSize="30dp"
            android:textColor="@color/rose_dust"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal|center_vertical">

        <ImageView
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:src="@drawable/movie_image"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal|center_vertical">

        <TextView
            android:id="@+id/message"
            android:text="You need to watch more movies "
            android:background="@drawable/round_rect_shape_title"
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:textColor="@color/rose_dust"
            android:textSize="30dp"/>



    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/Widget.MaterialComponents.Button.Icon"
            app:icon="@drawable/returnicon"
            app:iconSize="40dp"
            android:layout_marginLeft="180dp"
            android:text="RETURN TO MENU"
            android:backgroundTint="@color/blue_palette"
            android:textColor="@color/white"
            android:textSize="15sp"
            android:onClick="onClickBackToMenu"/>

    </LinearLayout>

</LinearLayout>