<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:padding= "5dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="2"
    android:background="@color/alice_blue"
    tools:context=".IntermediateActivity">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >

        <TextView
            android:id="@+id/releaseDateLabelIntermediateLevel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="Release date: "
            android:textColor="@color/rose_dust"
            android:textStyle="bold"
            />

        <TextView
            android:id="@+id/releaseDateIntermediateLevel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/overviewLabelIntermediateLevel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:scrollbars = "vertical"
            android:textColor="@color/rose_dust"
            android:text="Overview: "
            android:textStyle="bold"
            />

        <ScrollView
            android:layout_width="wrap_content"
            android:layout_height="80dp"
            android:paddingTop="10dp">

            <TextView
                android:id="@+id/overviewIntermediateLevel"
                android:layout_width="wrap_content"
                android:layout_height="90dp"
                android:layout_marginLeft="10dp"
                android:scrollbars="vertical" />
        </ScrollView>



    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:baselineAligned="false">

            <ImageView
                android:id="@+id/imageActor1IntermediateLevel"
                android:layout_width="0dp"
                android:layout_height="120dp"
                android:layout_weight="1"
                android:contentDescription="Image"
                android:layout_marginTop="5dp"
                android:adjustViewBounds = "true"/>

            <ImageView
                android:id="@+id/imageActor2IntermediateLevel"
                android:layout_width="0dp"
                android:layout_height="120dp"
                android:layout_weight="1"
                android:contentDescription="Image"
                android:layout_marginTop="5dp"
                android:adjustViewBounds = "true"/>

    </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/nameActor1LabelIntermediateLevel"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp"
                android:text="Actor name 1:"
                android:textColor="@color/rose_dust"
                android:textStyle="bold"
                />


            <TextView
                android:id="@+id/nameActor2LabelIntermediateLevel"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp"
                android:text="Actor name 2:"
                android:textColor="@color/rose_dust"
                android:textStyle="bold"
                />

        </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/nameActor1IntermediateLevel"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginLeft="10dp"
            />

        <TextView
            android:id="@+id/nameActor2IntermediateLevel"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginLeft="10dp"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/nameCharacter1LabelIntermediateLevel"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:text="Character name 1:"
            android:textColor="@color/rose_dust"
            android:textStyle="bold"
            />

        <TextView
            android:id="@+id/nameCharacter2LabelIntermediateLevel"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:text="Character name 2:"
            android:textColor="@color/rose_dust"
            android:textStyle="bold"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <TextView
            android:id="@+id/nameCharacter1IntermediateLevel"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginLeft="10dp"
            />


        <TextView
            android:id="@+id/nameCharacter2IntermediateLevel"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginLeft="10dp"
            />

    </LinearLayout>



    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:baselineAligned="false">

        <Button
            android:id="@+id/Answer1buttonIntermediateLevel"
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="3dp"
            android:layout_marginRight="10dp"
            android:layout_weight="1"
            android:textStyle="bold"
            android:onClick="onButtonClick"/>

            <Button
                android:id="@+id/Answer2buttonIntermediateLevel"
                android:layout_width="0dp"
                android:layout_height="100dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="3dp"
                android:layout_marginRight="10dp"
                android:layout_weight="1"
                android:textStyle="bold"
                android:onClick="onButtonClick"/>

        </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:baselineAligned="false">

        <Button
            android:id="@+id/Answer3buttonIntermediateLevel"
            android:layout_width="90dp"
            android:layout_height="100dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_weight="1"
            android:textStyle="bold"
            android:onClick="onButtonClick"/>

        <Button
            android:id="@+id/Answer4buttonIntermediateLevel"
            android:layout_width="90dp"
            android:layout_height="100dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_weight="1"
            android:textStyle="bold"
            android:onClick="onButtonClick"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="Score:"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/scoreIntermediateLevel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="0"
            android:textSize="20sp"
            android:textColor="@color/black"
            android:textStyle="bold"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="/"
            android:textSize="20sp"
            android:textColor="@color/black"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/nbQuestionsIntermediateLevel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="1"
            android:textSize="20sp"
            android:textColor="@color/black"
            android:textStyle="bold"/>

        <Button
            android:id="@+id/nextQuestionButtonIntermediateLevel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/rose_dust"
            android:textColor="@android:color/white"
            android:textStyle="bold"
            android:text="Next question"
            android:layout_marginLeft="107dp"
            android:layout_marginRight="10dp"
            android:enabled="false"
            android:onClick="nextQuestionClick"/>
    </LinearLayout>

</LinearLayout>